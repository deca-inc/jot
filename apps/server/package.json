{
  "name": "@jot/server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "bin": {
    "jot-server": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts start",
    "start": "node dist/cli.js start",
    "jot-server": "tsx src/cli.ts",
    "create:migration": "tsx scripts/createMigration.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "node --experimental-vm-modules ../../node_modules/jest/bin/jest.js --no-watchman",
    "test:run": "node --experimental-vm-modules ../../node_modules/jest/bin/jest.js --no-watchman",
    "coverage": "node --experimental-vm-modules ../../node_modules/jest/bin/jest.js --no-watchman --coverage"
  },
  "dependencies": {
    "@hocuspocus/server": "^2.15.0",
    "better-sqlite3": "^11.8.1",
    "commander": "^12.1.0",
    "express": "^4.21.2",
    "ws": "^8.18.0",
    "yjs": "^13.6.21",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.17.12",
    "@types/ws": "^8.5.14",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.20.6",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.50.1"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix"
  }
}
